@model IEnumerable<HRM_Automated.DTO.Data.EmployeeDTO>


@{
	ViewData["Title"] = "All employee";
	Layout = "_Layout";
}

<h1>List of all employee</h1>
<div>
	<form method="post">
		<table class="w-25 table table-striped table-bordered">
			<tbody>
				<tr>
					<td>Username</td>
					<td><input type="text" name="username" /></td>
				</tr>
				<tr>
					<td>Password</td>
					<td><input type="text" name="password" /></td>
				</tr>
				<tr>
					<td colspan="2">
						<button>Submit</button>
					</td>
				</tr>
			</tbody>
		</table>
	</form>

	<table class="table table-sm table-striped table-bordered m-2">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().Name)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().PhoneNumber)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().EmergencyContactNumber)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().Email)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().ContactAddress)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().PreviousPlaceOfWork)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().PreviousSalaryEarned)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().CurrentStatus)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().MaritalStatus)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().EmployeeUniqeId)</th>
				<th>@Html.DisplayNameFor(e => e.FirstOrDefault().DateOfEmployment)</th>
				<th>
					<input asp-action="CreateEmployee" class="btn btn-primary form-control" />
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var r in Model)
			{
				<tr>
					<td>@r.Name</td>
					<td>@r.PhoneNumber</td>
					<td>@r.EmergencyContactNumber</td>
					<td>@r.Email</td>
					<td>@r.ContactAddress</td>
					<td>@r.PreviousPlaceOfWork</td>
					<td>@r.PreviousSalaryEarned</td>
					<td>@r.CurrentStatus</td>
					<td>@r.MaritalStatus</td>
					<td>@r.EmployeeUniqeId</td>
					<td>@r.DateOfEmployment</td>
					<td>
						<a asp-action="GetEmployee" asp-route-id="@r.Id">Edit</a>
					</td>
					<td>
						<form asp-action="DeleteReservation" method="post">
							<input type="hidden" value="@r.Id" name="ReservationId" />
							<input type="image" src="/icon/close.png" />
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

